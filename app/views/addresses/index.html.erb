<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Type of address</th>
      <th>Status</th>
      <th>Entity</th>
      <th>Number and street</th>
      <th>Suite or apartment</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.type_of_address %></td>
        <td><%= address.status %></td>
        <td><%= address.entity %></td>
        <td><%= address.number_and_street %></td>
        <td><%= address.suite_or_apartment %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.country %></td>
        <td><%= address.notes %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

